---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Děkujeme!">
  <div class="container" style="text-align: center; padding: 4rem 1.5rem;">
    <h1>Děkujeme za Vaši zprávu!</h1>
    <p style="margin-bottom: 2rem;">Brzy se Vám ozveme.</p>
    <a href="/" class="cta-button">Zpět na hlavní stránku</a>
  </div>
</BaseLayout>

<style>
  /* You can add more specific styles here if needed */
  .container h1 {
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    margin-bottom: 1rem;
  }
  .container p {
    font-size: clamp(1rem, 4vw, 1.2rem);
  }
</style> 